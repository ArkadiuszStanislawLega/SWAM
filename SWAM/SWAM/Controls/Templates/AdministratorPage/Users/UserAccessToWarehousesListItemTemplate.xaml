<UserControl x:Class="SWAM.Controls.Templates.AdministratorPage.Users.UserAccessToWarehousesListItemTemplate"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SWAM.Controls.Templates.AdministratorPage.Users"
             xmlns:mod="clr-namespace:SWAM.Models"
             xmlns:System="clr-namespace:System;assembly=mscorlib"
             xmlns:enum="clr-namespace:SWAM.Enumerators"
             xmlns:fa="http://schemas.fontawesome.io/icons/"
             Tag="{Binding Id}"
             Margin="0 1 0 1"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <ObjectDataProvider x:Key="UserType"
                MethodName="GetValues" 
                ObjectType="{x:Type System:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="enum:UserType" />
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
    </UserControl.Resources>
    <StackPanel Background="{StaticResource GraphiteBrash}">
        <StackPanel Orientation="Horizontal">
            <Label Content="Typ uprawnienia:"/>
            <Label Name="UserPermision" Content="{Binding TypeOfAccess}" />
            <ComboBox Visibility="Collapsed" 
                      IsEnabled="False"
                      Name="EditUserPermissions" 
                      ItemsSource="{Binding Source={StaticResource UserType}}"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label Content="Magazyn:"/>
            <Label Name="WarehouseName" Content="{Binding CurrentWarehouse.Name}" />
            <ComboBox Visibility="Collapsed" 
                      IsEnabled="False"
                      Name="EditWarehouse" >
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Label Content="{Binding Name}"/>
                        </Grid>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
        </StackPanel>
        <Label Content="Nazwa użytkownika przydzielającego uprawnienia:"/>
        <Label Name="AdministatorName" Content="{Binding AdministratorNameWhoGaveGrant}"/>
        <Label Content="Data przydzielenia uprawnienia" />
        <Label Name="DateOfGrantingAccess" Content="{Binding DateOfGrantingAccess}"/>
        <Label Content="Data wygaśnięcia uprawnienia" />
        <StackPanel Orientation="Horizontal">
            <Label Name="DateOfAccessExpired" Content="{Binding DateOfExpiredAcces}"/>
            <Button Width="20" Height="20" 
                    Style="{StaticResource NavigationButton}"
                    Margin="20 0 0 0">
                <fa:ImageAwesome Icon="Calendar" 
                             Foreground="{StaticResource FontsBrash}"
                             Margin="-4"
                             ToolTip="Edytuj kontakt"/>
            </Button>
        </StackPanel>
        <Button Name="ConfirmAddAccess"
                Click="ConfirmAddAccess_Click"
                Margin="5"
                IsEnabled="False"
                Visibility="Collapsed"
                Width="140" 
                Content="Dodaj uprawnienia"
                Style="{StaticResource NavigationButton}"/>
    </StackPanel>
</UserControl>
