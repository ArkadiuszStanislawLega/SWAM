<UserControl x:Class="SWAM.Controls.Templates.AdministratorPage.UserProfileTemplate"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:System="clr-namespace:System;assembly=mscorlib"
             xmlns:enum="clr-namespace:SWAM.Enumerators"
             xmlns:temp="clr-namespace:SWAM.Controls.Templates"
             xmlns:userTemp="clr-namespace:SWAM.Controls.Templates.AdministratorPage.Users"
             xmlns:local="clr-namespace:SWAM.Controls.Templates.AdministratorPage"
             xmlns:conv="clr-namespace:SWAM.Converters"
             xmlns:fa="http://schemas.fontawesome.io/icons/"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <!--#region Resources-->
    <UserControl.Resources>
        <conv:DateOfExpireColorConverter x:Key="dateOfExpireColorConverter"/>
        <conv:BooleanToVisiblityConverter x:Key="visbilityConverter"/>
        <ObjectDataProvider x:Key="UserType"
                MethodName="GetValues" 
                ObjectType="{x:Type System:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="enum:UserType" />
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
    </UserControl.Resources>
    <!--#endregion-->
    <Grid>
        <Grid Name="Content" >
            <!--#region RowDefinitions-->
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <!--#endregion-->
            <TextBlock Grid.Row="0" Name="Title"
               Style="{StaticResource Title}"
               Text="Profil użytkownika:"/>
            <!--#region User Profile-->
            <Grid  HorizontalAlignment="Center" 
                   Grid.Row="1" Grid.Column="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!--#region Left Side Of profile-->
                <ScrollViewer Name="LeftSideOfProfile" Grid.Row="1" Grid.Column="0">
                    <StackPanel Margin="10">
                        <StackPanel Margin="5">
                            <TextBlock Text="Nazwa użytkownika" 
                               Style="{StaticResource ProfileProperties}"/>
                            <TextBlock Name="Name" Text="{Binding Name}"/>
                            <TextBox Name="EditName" Text="{Binding Name}" 
                         IsEnabled="False" Visibility="Collapsed"/>
                        </StackPanel>
                        <StackPanel Margin="5">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Uprawnienia" Grid.Column="0"
                                            Style="{StaticResource ProfileProperties}"/>
                                <Button Grid.Column="2" Style="{StaticResource NavigationButton}"
                                        Height="16" Width="16">
                                    <fa:ImageAwesome Icon="Pencil" Foreground="{StaticResource FontsBrash}"
                                                     Margin="-3"/>
                                </Button>
                            </Grid>
                            <TextBlock Name="Permissions" Text="{Binding Permissions}"/>
                            <ComboBox Name="EditPermissions"
                                      ItemsSource="{Binding Source={StaticResource UserType}}"
                                      Visibility="Collapsed"/>
                        </StackPanel>
                        <StackPanel Margin="5">
                            <TextBlock Text="Data założenia konta"
                               Style="{StaticResource ProfileProperties}"/>
                            <TextBlock Name="DateOfAccountCreate" Text="{Binding DateOfCreate}"/>
                        </StackPanel>
                        <StackPanel Margin="5">
                            <TextBlock Text="Data wygaśnięcia konta"
                               Style="{StaticResource ProfileProperties}"/>
                            <TextBlock Name="ExpireDate" Text="{Binding DateOfExpiryOfTheAccount}"
                                       Foreground="{Binding  ElementName=ExpireDate, Path=Text, 
                                       Converter={StaticResource dateOfExpireColorConverter}}"/>
                        </StackPanel>
                        <!--#region Date of User block-->
                        <StackPanel Margin="5">
                            <TextBlock Text="Końcowa data blokady konta"
                               Style="{StaticResource ProfileProperties}"/>
                            <StackPanel>
                                <TextBlock Name="ShowDateOfUserBlock" Text="{Binding ExpiryDateOfTheBlockade}"/>
                       
                            </StackPanel>
                        </StackPanel>
                        <!--#endregion-->
                        <StackPanel Margin="5">
                            <TextBlock Text="Status konta"
                                   Style="{StaticResource ProfileProperties}"/>
                            <TextBlock Name="AccountStatus" Text="{Binding StatusOfUserAccount}"/>
                            <CheckBox Name="EditAccountStatus" Content="Konto aktywne" 
                             IsEnabled="False" Visibility="Collapsed" ToolTip="Jeżeli zaznaczony to aktywne."/>
                        </StackPanel>
                        <StackPanel Margin="5">
                            <TextBlock Text="Reset hasła"
                                   Style="{StaticResource ProfileProperties}"/>
                            <TextBlock Name="Password" Text="{Binding Password}"/>
                            <PasswordBox Name="EditPassword" IsEnabled="False" Visibility="Collapsed"/>
                            <PasswordBox Name="EditConfirmPassword" IsEnabled="False" Visibility="Collapsed"/>
                        </StackPanel>
                    </StackPanel>
                    <!--#region On loaded animation-->
                    <ScrollViewer.Triggers>
                        <EventTrigger RoutedEvent="Loaded">
                            <BeginStoryboard>
                                <Storyboard>
                                    <ThicknessAnimation Storyboard.TargetProperty="Margin"
                                        Duration="0:0:1.5"
                                        From="-300 0 0 0" To="1"
                                        DecelerationRatio="1"/>
                                    <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                      Duration="0:0:1.5" 
                                      From="0" To="1"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </ScrollViewer.Triggers>
                    <!--#endregion-->
                </ScrollViewer>
                <!--#endregion-->
                <userTemp:UserAccessToWarehousesTemplates x:Name="AccesToWarehousesList" Grid.Column="1"/>
                <!--#region Right side of profile-->
                <StackPanel HorizontalAlignment="Right" Grid.Column="2">
                    <local:EmailEditableListTemplate/>
                    <local:PhoneNumbersEditableListTemplate/>
                </StackPanel>

                <!--#endregion-->
            </Grid>
            <!--#endregion-->
        </Grid>
        <StackPanel Grid.Column="0"
                    Orientation="Horizontal"  
                    VerticalAlignment="Top"
                    HorizontalAlignment="Right"
                    Name="Buttons"
                    Margin="0 0 50 0">
            <Button Name="BlockUser" 
                        Content="Zablokuj"
                        Click="BlockUser_Click"
                        Style="{StaticResource UserProfilebuttons}"/>
            <Button Name="DeletUser" 
                        Content="Usuń "
                        Click="DeletUser_Click"
                        Style="{StaticResource UserProfilebuttons}"/>
            <Button Name="EditUser" 
                        Content="Edytuj"
                        Click="EditUser_Click"
                        Style="{StaticResource UserProfilebuttons}"/>
            <Button Name="ConfirmChanges" 
                        Content="Zatwierdź zmiany"
                        IsEnabled="False"
                        Visibility="Collapsed"
                        Click="ConfirmChanges_Click"   
                        Style="{StaticResource UserProfilebuttons}"/>
        </StackPanel>

        <StackPanel HorizontalAlignment="Right" VerticalAlignment="Top" >
            <userTemp:ChangeUserBlockDate Margin="0 0 0 1" Tag="Data blokady konta"/>
            <userTemp:ChangeUserExpiredDate Tag="Data wygaśnięcia konta"/>
        </StackPanel>
    </Grid>
</UserControl>
