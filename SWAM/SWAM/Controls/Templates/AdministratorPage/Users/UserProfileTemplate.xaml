<UserControl x:Class="SWAM.Controls.Templates.AdministratorPage.UserProfileTemplate"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:System="clr-namespace:System;assembly=mscorlib"
             xmlns:enum="clr-namespace:SWAM.Enumerators"
             xmlns:temp="clr-namespace:SWAM.Controls.Templates"
             xmlns:userTemp="clr-namespace:SWAM.Controls.Templates.AdministratorPage.Users"
             xmlns:local="clr-namespace:SWAM.Controls.Templates.AdministratorPage"
             xmlns:conv="clr-namespace:SWAM.Converters"
             xmlns:fa="http://schemas.fontawesome.io/icons/"
             mc:Ignorable="d" 
             Height="auto"
             Width="auto"
             d:DesignHeight="450" d:DesignWidth="800">
    <!--#region Resources-->
    <UserControl.CommandBindings>
        <CommandBinding Command="ApplicationCommands.New" Executed="NewCommand_Executed" CanExecute="NewCommand_CanExecute" />
    </UserControl.CommandBindings>
    <UserControl.Resources>
        <conv:DateOfExpireColorConverter x:Key="dateOfExpireColorConverter"/>
        <conv:BooleanToVisiblityConverter x:Key="visbilityConverter"/>
        <ObjectDataProvider x:Key="UserType"
                MethodName="GetValues" 
                ObjectType="{x:Type System:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="enum:UserType" />
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
    </UserControl.Resources>
    <!--#endregion-->
    <Grid>
        <Grid Name="Content" >
            <!--#region RowDefinitions-->
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <!--#endregion-->
            <TextBlock Grid.Row="0" Name="Title"
               Style="{StaticResource Title}"
               Text="Profil użytkownika:"/>
            <!--#region User Profile-->
            <StackPanel Orientation="Horizontal" 
                    HorizontalAlignment="Center" 
                    Grid.Row="1">

                <!--#region Left Side Of profile-->
                <ScrollViewer Name="LeftSideOfProfile">
                    <StackPanel Margin="10" Grid.Row="1" Grid.Column="0">
                        <StackPanel Margin="5">
                            <TextBlock Text="Nazwa użytkownika" 
                               Style="{StaticResource ProfileProperties}"/>
                            <TextBlock Name="Name" Text="{Binding Name}"/>
                            <TextBox Name="EditName" Text="{Binding Name}" 
                         IsEnabled="False" Visibility="Collapsed"/>
                        </StackPanel>
                        <StackPanel Margin="5">
                            <TextBlock Text="Uprawnienia" 
                               Style="{StaticResource ProfileProperties}"/>
                            <TextBlock Name="Permissions" Text="{Binding Permissions}"/>
                            <ComboBox Name="EditPermissions"
                          ItemsSource="{Binding Source={StaticResource UserType}}"
                          Visibility="Collapsed"/>
                        </StackPanel>
                        <StackPanel Margin="5">
                            <TextBlock Text="Data założenia konta"
                               Style="{StaticResource ProfileProperties}"/>
                            <TextBlock Name="DateOfAccountCreate" Text="{Binding DateOfCreate}"/>
                        </StackPanel>
                        <StackPanel Margin="5">
                            <TextBlock Text="Data wygaśnięcia konta"
                               Style="{StaticResource ProfileProperties}"/>
                            <TextBlock Name="ExpireDate" Text="{Binding DateOfExpiryOfTheAccount}"
                                       Foreground="{Binding  ElementName=ExpireDate, Path=Text, 
                                       Converter={StaticResource dateOfExpireColorConverter}}"/>
                        </StackPanel>
                        <!--#region Date of User block-->
                        <StackPanel Margin="5">
                            <TextBlock Text="Końcowa data blokady konta"
                               Style="{StaticResource ProfileProperties}"/>
                            <StackPanel>
                                <TextBlock Name="ShowDateOfUserBlock" Text="{Binding ExpiryDateOfTheBlockade}"/>
                                <Button Name="EditDateOfUserBlock"
                                        Style="{StaticResource NavigationButton}"
                                        Height="16" 
                                        Width="16"
                                        Margin="1"
                                        Click="EditDateOfUserBlock_Click">
                                    <fa:ImageAwesome Icon="Calendar" 
                                                     Foreground="{StaticResource FontsBrash}"
                                                     Margin="-4"
                                                     ToolTip="Edytuj kontakt"/>
                                    <Button.Triggers>
                                        <EventTrigger RoutedEvent="Button.Click" 
                                                      SourceName="EditDateOfUserBlock">
                                            <BeginStoryboard>
                                                <Storyboard Name="EditUserBlockadeData">
                                                    <ThicknessAnimation Storyboard.TargetProperty="Margin"
                                                                        Storyboard.TargetName="UserBlockCallendar"
                                                                        Duration="0:0:0.7"
                                                                        From="0 0 -200 0"
                                                                        DecelerationRatio="1"/>
                                                    <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                                      Storyboard.TargetName="UserBlockCallendar"
                                                                      Duration="0:0:0.7" 
                                                                      From="0" To="1"/>
                                                    <BooleanAnimationUsingKeyFrames
                                                                    Storyboard.TargetName="UserBlockCallendar"
                                                                    Storyboard.TargetProperty="IsEnabled"
                                                                    FillBehavior="HoldEnd">
                                                        <DiscreteBooleanKeyFrame Value="True" KeyTime="0:0:0.1" />
                                                    </BooleanAnimationUsingKeyFrames>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </EventTrigger>
                                    </Button.Triggers>
                                </Button>
                            </StackPanel>
                        </StackPanel>
                        <!--#endregion-->
                        <StackPanel Margin="5">
                            <TextBlock Text="Status konta"
                                   Style="{StaticResource ProfileProperties}"/>
                            <TextBlock Name="AccountStatus" Text="{Binding StatusOfUserAccount}"/>
                            <CheckBox Name="EditAccountStatus" Content="Konto aktywne" 
                             IsEnabled="False" Visibility="Collapsed" ToolTip="Jeżeli zaznaczony to aktywne."/>
                        </StackPanel>
                        <StackPanel Margin="5">
                            <TextBlock Text="Reset hasła"
                                   Style="{StaticResource ProfileProperties}"/>
                            <TextBlock Name="Password" Text="{Binding Password}"/>
                            <PasswordBox Name="EditPassword" IsEnabled="False" Visibility="Collapsed"/>
                            <PasswordBox Name="EditConfirmPassword" IsEnabled="False" Visibility="Collapsed"/>
                        </StackPanel>
                    </StackPanel>
                    <!--#region On loaded animation-->
                    <ScrollViewer.Triggers>
                        <EventTrigger RoutedEvent="Loaded">
                            <BeginStoryboard>
                                <Storyboard>
                                    <ThicknessAnimation Storyboard.TargetProperty="Margin"
                                        Duration="0:0:1.5"
                                        From="-300 0 0 0" To="1"
                                        DecelerationRatio="1"/>
                                    <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                      Duration="0:0:1.5" 
                                      From="0" To="1"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </ScrollViewer.Triggers>
                    <!--#endregion-->
                </ScrollViewer>
                <!--#endregion-->

                <userTemp:UserAccessToWarehousesTemplates x:Name="AccesToWarehousesList"/>

                <!--#region Right side of profile-->
                <StackPanel Grid.Column="2" Grid.Row="1">
                    <local:EmailEditableListTemplate/>
                    <local:PhoneNumbersEditableListTemplate/>
                </StackPanel>
                <!--#endregion-->
            </StackPanel>
            <!--#endregion-->
        </Grid>
        <StackPanel 
                    Orientation="Horizontal"  
                    VerticalAlignment="Top"
                    HorizontalAlignment="Right"
                    Name="Buttons">
            <Button Name="BlockUser" 
                        Content="Zablokuj"
                        Click="BlockUser_Click"
                        Style="{StaticResource UserProfilebuttons}"/>
            <Button Name="DeletUser" 
                        Content="Usuń "
                        Click="DeletUser_Click"
                        Style="{StaticResource UserProfilebuttons}"/>
            <Button Name="EditUser" 
                        Content="Edytuj"
                        Click="EditUser_Click"
                        Style="{StaticResource UserProfilebuttons}"/>
            <Button Name="ConfirmChanges" 
                        Content="Zatwierdź zmiany"
                        IsEnabled="False"
                        Visibility="Collapsed"
                        Click="ConfirmChanges_Click"   
                        Style="{StaticResource UserProfilebuttons}"/>
        </StackPanel>

        <!--#region User block callendar-->
        <Border Name="UserBlockCallendar" VerticalAlignment="Center"
                IsEnabled="False"
                Visibility="{Binding  ElementName=UserBlockCallendar, Path=IsEnabled, 
                                       Converter={StaticResource visbilityConverter}}"
                HorizontalAlignment="Center" Padding="4"  
                CornerRadius="5">
            <Border.Background>
                <SolidColorBrush Opacity="0.7" Color="{StaticResource DarkGraphite}" />
            </Border.Background>
            <Border.Effect>
                <DropShadowEffect BlurRadius="20" Direction="90"  ShadowDepth="1"/>
            </Border.Effect>
            <StackPanel>
                <Calendar/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" >
                    <TextBlock/>
                    <Button Style="{StaticResource NavigationButton}" 
                                                Content="Ok"
                                                Name="ConfirmDateOfClock">
                        <Button.Triggers>
                            <EventTrigger RoutedEvent="Button.Click" SourceName="ConfirmDateOfClock">
                                <BeginStoryboard>
                                    <Storyboard Name="ConfirmUserBlockadeData">
                                        <ThicknessAnimation Storyboard.TargetProperty="Margin"
                                                                        Storyboard.TargetName="UserBlockCallendar"
                                                                        Duration="0:0:0.7"
                                                                        To="0 0 -200 0"
                                                                        DecelerationRatio="1"/>
                                        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                                      Storyboard.TargetName="UserBlockCallendar"
                                                                      Duration="0:0:0.7" 
                                                                      From="1" To="0"/>
                                        <BooleanAnimationUsingKeyFrames
                                                                    Storyboard.TargetName="UserBlockCallendar"
                                                                    Storyboard.TargetProperty="IsEnabled"
                                                                    FillBehavior="HoldEnd">
                                            <DiscreteBooleanKeyFrame Value="False" KeyTime="0:0:1" />
                                        </BooleanAnimationUsingKeyFrames>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Button.Triggers>
                    </Button>
                </StackPanel>
            </StackPanel>
        </Border>
        <!--#endregion-->
    </Grid>
</UserControl>
