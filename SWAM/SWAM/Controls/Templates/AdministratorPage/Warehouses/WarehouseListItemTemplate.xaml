<Button x:Class="SWAM.Controls.Templates.AdministratorPage.Warehouses.WarehouseListItemTemplate"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SWAM.Controls.Templates.AdministratorPage.Warehouses"
             Style="{StaticResource UsersListButtons}"    
             Tag="{Binding Id}"
             Click="Button_Click"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <TextBlock Name="WarehoseId" 
                   Text="{Binding Id}" 
                   FontSize="10" 
                   Margin="10 5 0 0"
                   Foreground="{StaticResource DarkGraphiteBrash}"/>

        <TextBlock Name="WarehouseName" 
                   TextAlignment="Left"
                   Text="{Binding Name}"
                   FontSize="16"
                   Margin="10 0 10 0" />
    </StackPanel>
</Button>
