<Window x:Class="SWAM.Controls.Windows.DeleteProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SWAM.Controls.Windows"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource BackgroundOfPagesBrash}"
        Title="Usuń produkt" Height="200" Width="400">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Czy na pewno chcesz usunąć produkt?" />
            <TextBlock Text="(decyzja jest nieodwracalna)" TextAlignment="Center"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Name="YesButton" Content="Tak" Margin="5" Click="YesButton_Click"/>
                <Button Name="NoButton"  Content="Nie"  Margin="5" Click="NoButton_Click"/>
            </StackPanel>
           
        </StackPanel>
    </Grid>
</Window>
