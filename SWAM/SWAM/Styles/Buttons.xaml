    <Style x:Key="CallendarButton" TargetType="Button">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Grid HorizontalAlignment="Right" VerticalAlignment="Center" 
                                Width="230" Height="230">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="auto"/>
                        </Grid.ColumnDefinitions>
                        <Button  Name="EditDateOfUserBlock"
                                 Grid.Column="1"
                                 Margin="0 0 0 -260"
                                 Height="30"
                                 Width="230"
                                 Style="{StaticResource NavigationButton}"
                                 HorizontalAlignment="Center"
                                 VerticalAlignment="Center">
                            <TextBlock 
                                Foreground="{StaticResource FontsBrash}"
                                Text="{TemplateBinding Content}"
                                ToolTip="Edytuj kontakt">
                            </TextBlock>
                            <Button.RenderTransform>
                                <TransformGroup>
                                    <RotateTransform Angle="270"/>
                                </TransformGroup>
                            </Button.RenderTransform>
                        </Button>
                        <!--#region User block callendar-->
                        <Border Name="UserBlockCallendar" VerticalAlignment="Center"
                                IsEnabled="False"   Grid.Column="0"
                                Visibility="{Binding  ElementName=UserBlockCallendar, Path=IsEnabled, 
                                                       Converter={conv:BooleanToVisiblityConverter}}"
                                HorizontalAlignment="Right" Padding="4"  
                                CornerRadius="5">
                            <Border.Background>
                                <SolidColorBrush Opacity="0.7" Color="{StaticResource DarkGraphite}" />
                            </Border.Background>
                            <StackPanel Visibility="{Binding  ElementName=UserBlockCallendar, Path=IsEnabled, 
                                                       Converter={conv:BooleanToVisiblityConverter}}">
                                <Calendar/>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" >
                                    <TextBlock/>
                                    <Button Style="{StaticResource  UserProfilebuttons}" 
                                            Content="Ok"
                                            Name="ConfirmDateOfClock">
                                        <Button.Triggers>
                                            <EventTrigger RoutedEvent="Button.Click" SourceName="ConfirmDateOfClock">
                                                <BeginStoryboard>
                                                    <Storyboard Name="ConfirmUserBlockadeData">
                                                        <ThicknessAnimation Storyboard.TargetProperty="Margin"
                                                                        Storyboard.TargetName="UserBlockCallendar"
                                                                        Duration="0:0:0.7"
                                                                        To="0 0 -190 0"
                                                                        DecelerationRatio="1"/>
                                                        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                                      Storyboard.TargetName="UserBlockCallendar"
                                                                      Duration="0:0:0.7" 
                                                                      From="1" To="0"/>
                                                        <BooleanAnimationUsingKeyFrames
                                                                    Storyboard.TargetName="UserBlockCallendar"
                                                                    Storyboard.TargetProperty="IsEnabled"
                                                                    FillBehavior="HoldEnd">
                                                            <DiscreteBooleanKeyFrame Value="False" KeyTime="0:0:1" />
                                                        </BooleanAnimationUsingKeyFrames>

                                                        <ThicknessAnimation Storyboard.TargetProperty="Margin"
                                                                        Storyboard.TargetName="EditDateOfUserBlock"
                                                                        Duration="0:0:0.7"
                                                                        To="190 0 0 -260"
                                                                        DecelerationRatio="1"/>
                                                        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                                      Storyboard.TargetName="EditDateOfUserBlock"
                                                                      Duration="0:0:0.7" 
                                                                      From="0" To="1"/>
                                                        <BooleanAnimationUsingKeyFrames
                                                                    Storyboard.TargetName="EditDateOfUserBlock"
                                                                    Storyboard.TargetProperty="IsEnabled"
                                                                    FillBehavior="HoldEnd">
                                                            <DiscreteBooleanKeyFrame Value="True" KeyTime="0:0:0.001" />
                                                        </BooleanAnimationUsingKeyFrames>
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </EventTrigger>
                                        </Button.Triggers>
                                    </Button>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!--#endregion-->
                    </Grid>
                    <ControlTemplate.Triggers>
                        <EventTrigger RoutedEvent="Button.Click" 
                                      SourceName="EditDateOfUserBlock">
                            <BeginStoryboard>
                                <Storyboard>
                                    <ThicknessAnimation Storyboard.TargetProperty="Margin"
                                                                        Storyboard.TargetName="UserBlockCallendar"
                                                                        Duration="0:0:0.7"
                                                                        From="0 0 -190 0"
                                                                        DecelerationRatio="1"/>
                                    <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                                      Storyboard.TargetName="UserBlockCallendar"
                                                                      Duration="0:0:0.7" 
                                                                      From="0" To="1"/>
                                    <BooleanAnimationUsingKeyFrames Storyboard.TargetName="UserBlockCallendar"
                                                                    Storyboard.TargetProperty="IsEnabled"
                                                                    FillBehavior="HoldEnd">
                                        
                                        <DiscreteBooleanKeyFrame Value="True" KeyTime="0:0:0.1" />
                                    </BooleanAnimationUsingKeyFrames>

                                    <ThicknessAnimation Storyboard.TargetProperty="Margin"
                                                                        Storyboard.TargetName="EditDateOfUserBlock"
                                                                        Duration="0:0:0.7"
                                                                        From="190 0 0 -260"
                                                                        DecelerationRatio="1"/>
                                    <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                     Storyboard.TargetName="EditDateOfUserBlock"
                                                     Duration="0:0:0.7" 
                                                     From="1" To="0"/>
                                    <BooleanAnimationUsingKeyFrames Storyboard.TargetName="EditDateOfUserBlock"
                                                                    Storyboard.TargetProperty="IsEnabled"
                                                                    FillBehavior="HoldEnd">
                                        <DiscreteBooleanKeyFrame Value="False" KeyTime="0:0:0.7" />
                                    </BooleanAnimationUsingKeyFrames>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>