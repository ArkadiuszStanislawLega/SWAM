    <!--#region FaNoBcgrEnbleForeground-->
    <!-- Font awesome with transparent bacground and enabled-colour foregoround
         and autoriverse animation when maouse is over. -->
    <Style x:Key="FaNoBcgrEnbleForeground" TargetType="Button">
        <Setter Property="FontFamily" Value="{StaticResource BasicFont}"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{StaticResource EnabledBrash}"/>
        <Setter Property="Height" Value="16"/>
        <Setter Property="Width" Value="16" />
        <Setter Property="BorderBrush" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Width="{TemplateBinding Width}"
                            Height="{TemplateBinding Height}"
                            Background="{TemplateBinding Background}">
                        <Label  x:Name="ContentIcon"
                                Width="22"
                                Height="22"
                                FontSize="20"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Content="{TemplateBinding Content}"
                                Foreground="{TemplateBinding Foreground}"/>
                    </Border>
                    <ControlTemplate.Resources>
                        <Storyboard x:Key="ArrowStory">
                            <ThicknessAnimation Storyboard.TargetName="ContentIcon"
                                                            Storyboard.TargetProperty="Margin"
                                                            From="0 0 0 0" To="0 0 15 0"
                                                            Duration="0:0:0.2"
                                                            RepeatBehavior="Forever"
                                                            AutoReverse="True"
                                                            FillBehavior="HoldEnd"/>
                        </Storyboard>
                    </ControlTemplate.Resources>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Trigger.EnterActions>
                                <BeginStoryboard Storyboard="{StaticResource ArrowStory}" x:Name="ArrowStory"/>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <RemoveStoryboard BeginStoryboardName="ArrowStory"/>
                            </Trigger.ExitActions>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Background" Value="{StaticResource EnabledBrash}"/>
                            <Setter Property="Foreground" Value="{StaticResource BlueBrash}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
