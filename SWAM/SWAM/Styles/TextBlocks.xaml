<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:SWAM.Styles">


    <!--#region Title-->
    <Style TargetType="TextBlock" x:Key="Title">
        <Setter Property="Foreground" Value="Gray"/>
        <Setter Property="FontSize" Value="30"/>
        <Setter Property="FontWeight" Value="Bold" />
    </Style>
    <!--#endregion-->

    <!--#region Title-->
    <Style TargetType="TextBlock" x:Key="TitleOfLists">
        <Setter Property="Foreground" Value="{StaticResource FontsBrash}"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="Bold" />
    </Style>
    <!--#endregion-->

    <!--#region ProfileProperties-->
    <Style TargetType="TextBlock" x:Key="ProfileProperties">
        <Setter Property="Foreground" Value="Gray"/>
        <Setter Property="FontSize" Value="14"/>
    </Style>
    <!--#endregion-->
</ResourceDictionary>