<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:SWAM.Styles">

    <!--#region BasicLabel-->
    <Style x:Key="BasicLabel" TargetType="Label">
        <Setter Property="FontFamily" Value="{StaticResource BasicFont}"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{StaticResource FontsBrash}"/>
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="FontSize" Value="60"/>
    </Style>
    <!--#endregion-->

    <!--#region BasicLabel-->
    <Style x:Key="TitleLabel" TargetType="{x:Type Label}" BasedOn="{StaticResource BasicLabel}">
        <Setter Property="FontSize" Value="30"/>
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="HorizontalAlignment" Value="Center" />
    </Style>
    <!--#endregion-->

</ResourceDictionary>