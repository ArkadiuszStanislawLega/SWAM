<Window x:Class="SWAM.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        AllowsTransparency="True"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource MainBarBrash}"
        WindowStyle="None"
        Title="SWAM" 
        x:Name="SWAM"
        mc:Ignorable="d"
        Height="450" Width="800">
    <StackPanel>
        <!--#region Top Window Title-->
        <Grid Name="TitlePanel"
                    Width="auto" Height="30"
                    Background="{StaticResource MainBarBrash}"
                    MouseLeftButtonDown="TopBarContent_MouseDown">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Image Source="/Resorces/Pictures/icon.png" Width="20" Height="20" Margin="5"/>
            <TextBlock Name="TitleOfMainPanel" 
                       Text="SWAM" 
                       FontSize="15"
                       Margin="5"
                       Foreground="{StaticResource FontsBrash}"
                       Grid.Column="1"
                       Grid.Row="0"/>
            <StackPanel
                Name="TitlePanelButtons"
                HorizontalAlignment="Right"
                Orientation="Horizontal"
                Grid.Column="2">
                <Button Name="Minimize" 
                        Content="___" 
                        Click="Minimize_Click"
                        FontWeight="Bold"/>
                <Button Name="Maximise" Content="[ ]"  
                        Click="Maximize_Click"
                        FontWeight="Bold"/>
                <Button Name="Exit" 
                        Content="X" 
                        Click="Exit_Click" 
                        FontWeight="Bold"/>
            </StackPanel>
        </Grid>
        <!--#endregion-->
        <!--#region Menu of Window-->
        <StackPanel Name="MenuPanel"
                        Grid.Column="1"
                        Grid.Row="1">
            <DockPanel Name="Menu">
                <Menu DockPanel.Dock="Top" >
                    <MenuItem Header="_Plik">
                        <MenuItem Header="_Otwórz"/>
                        <MenuItem Header="_Zapisz"/>
                        <Separator/>
                        <MenuItem Header="_Zamknij"/>
                    </MenuItem>
                    <MenuItem Header="_Ustawienia">
                        <MenuItem Header="_Opcje"/>
                        <MenuItem Header="_Połączenie"/>
                        <MenuItem Header="_Magazyny" IsEnabled="False"/>
                    </MenuItem>
                </Menu>
                <StackPanel></StackPanel>
            </DockPanel>
        </StackPanel>
        <!--#endregion-->
        <!--#region MainContent of the Window-->
        <StackPanel Name="ContentOfWindow">
   
        </StackPanel>
        <!--#endregion-->

        <!--#region TemporaryNavigationBar -->
        <StackPanel Orientation="Horizontal" 
                    Name="TemporaryNavigationBar" 
                    VerticalAlignment="Bottom"
                    HorizontalAlignment="Center">
            <Button Width="130" Content="administratorPage" Name="SwitchToAdministratorPage" Click="TemporaryNaviagionBar_Click"/>
            <Button Width="130" Content="loginPage" Name="SwitchToLoginPage" Click="TemporaryNaviagionBar_Click"/>
            <Button Width="130" Content="manageItemsPage" Name="SwitchToManageItemPage" Click="TemporaryNaviagionBar_Click"/>
            <Button Width="130" Content="manageMagazinePage" Name="SwitchToManageMagazinePage" Click="TemporaryNaviagionBar_Click"/>
            <Button Width="130" Content="manageOrdersPage" Name="SwitchToManageOrderPage" Click="TemporaryNaviagionBar_Click"/>
        </StackPanel>
        <!--#endregion-->
    </StackPanel>
</Window>
