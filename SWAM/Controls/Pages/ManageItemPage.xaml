<UserControl x:Class="SWAM.ManageItemPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"  
      xmlns:conv="clr-namespace:SWAM.Converters"
      mc:Ignorable="d" 
      HorizontalAlignment="Stretch"
      VerticalAlignment="Stretch"
      Background="{StaticResource BackgroundOfPagesBrash}"
      d:DesignHeight="450" d:DesignWidth="800">
    <!--#region Reosurces-->
    <UserControl.Resources>
        <!--#region ProducutsButton-->
        <Style x:Key="ProducutsButton" TargetType="Button" BasedOn="{StaticResource NavigationButton}">
            <Setter Property="Width" Value="50"/>
            <Setter Property="Margin" Value="10"/>
        </Style>
        <!--#endregion-->
        <!--#region ProductTextBox-->
        <Style x:Key="ProductTextBox" TargetType="TextBox">
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="HorizontalContentAlignment" Value="Right" />
            <Setter Property="Visibility" Value="{Binding Visibility, ElementName=EditedName}"/>
            <Setter Property="Opacity" Value="{Binding Opacity, ElementName=EditedName}" />
            <Setter Property="FontSize" Value="14"/>
        </Style>
        <!--#endregion-->
        <!--#region ProductLabel-->
        <Style x:Key="ProductLabel" TargetType="Label">
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="Visibility" Value="{Binding Visibility, ElementName=LabelName}"/>
            <Setter Property="Opacity" Value="{Binding Opacity, ElementName=LabelName}" />
        </Style>
        <!--#endregion-->
        <!--#region ShowEditStory-->
        <Storyboard x:Key="ShowEditStory">
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                             Storyboard.TargetName="EditedName"
                             Duration="0:0:0.4" 
                             From="0" To="1"/>
            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="EditedName" 
                                           Storyboard.TargetProperty="(UIElement.Visibility)">
                <DiscreteObjectKeyFrame KeyTime="0" Value="{x:Static Visibility.Visible}"/>
            </ObjectAnimationUsingKeyFrames>

            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="LabelName" 
                                           Storyboard.TargetProperty="(UIElement.Visibility)">
                <DiscreteObjectKeyFrame KeyTime="0:0:0" Value="{x:Static Visibility.Collapsed}"/>
            </ObjectAnimationUsingKeyFrames>
        </Storyboard>
        <!--#endregion-->
        <!--#region HideEditStory-->
        <Storyboard x:Key="HideEditStory">
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                             Storyboard.TargetName="EditedName"
                             Duration="0:0:0.4" 
                             From="1" To="0"/>
            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="EditedName" 
                                           Storyboard.TargetProperty="(UIElement.Visibility)">
                <DiscreteObjectKeyFrame KeyTime="0:0:0.4" Value="{x:Static Visibility.Collapsed}"/>
            </ObjectAnimationUsingKeyFrames>

            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="LabelName" 
                                           Storyboard.TargetProperty="(UIElement.Visibility)">
                <DiscreteObjectKeyFrame KeyTime="0:0:0.4" Value="{x:Static Visibility.Visible}"/>
            </ObjectAnimationUsingKeyFrames>
        </Storyboard>
        <!--#endregion-->
    </UserControl.Resources>
    <!--#endregion-->
    <Grid>
        <!--#region RowsDefinitions-->
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <!--#endregion-->
        <TextBlock Name="Title" 
                   Text="Manager produktów" 
                   Margin="10 0 0 0"
                   Style="{StaticResource Title}"
                   HorizontalAlignment="Left"/>
        <Grid Grid.Row="1">
            <!--#region Column definitions-->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <!--#endregion-->
            <Grid Grid.Column="0" Name="ProductProfile" >
                <!--#region Column definitions-->
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>
                <!--#endregion-->
                <!--#region Properites-->
                <StackPanel Grid.Column="0" Margin="10">
                    <!--#region Name-->
                    <TextBlock Text="Nazwa:"  Style="{StaticResource ProfileProperties}"/>
                    <Label Name="LabelName" Content="{Binding Name}" Visibility="Visible" HorizontalAlignment="Right"/>
                    <TextBox  Name="EditedName" Text="{Binding Name}" 
                              FontSize="14"
                              HorizontalAlignment="Stretch"
                              HorizontalContentAlignment="Right"
                              Visibility="{Binding Visibility,
                                        ElementName=LabelName,
                                        Converter={conv:VisibilityReverseConverter}}"/>
                    <!--#endregion-->
                    <!--#region Width-->
                    <Grid>
                        <TextBlock Text="Szerokość" Style="{StaticResource ProfileProperties}"/>
                        <TextBlock Text="mm" HorizontalAlignment="Right" Style="{StaticResource ProfileProperties}"/>
                    </Grid>
                    <Label Content="{Binding Width}"  Style="{StaticResource ProductLabel}"/>
                    <TextBox Text="{Binding Width}" Name="EditedWidth" Style="{StaticResource ProductTextBox}"/>
                    <!--#endregion-->
                    <!--#region Length-->
                    <Grid>
                        <TextBlock Text="Długość" Style="{StaticResource ProfileProperties}"/>
                        <TextBlock Text="mm" HorizontalAlignment="Right" Style="{StaticResource ProfileProperties}"/>
                    </Grid>
                    <Label Content="{Binding Length}" Style="{StaticResource ProductLabel}"/>
                    <TextBox Name="EditedLenght" Text="{Binding Length}" Style="{StaticResource ProductTextBox}"/>
                    <!--#endregion-->
                    <!--#region Height-->
                    <Grid>
                        <TextBlock Text="Wysokość" Style="{StaticResource ProfileProperties}"/>
                        <TextBlock Text="mm" HorizontalAlignment="Right" Style="{StaticResource ProfileProperties}"/>
                    </Grid>
                    <Label Content="{Binding Height}" Style="{StaticResource ProductLabel}"/>
                    <TextBox Name="EditedHeight" Text="{Binding Height}" Style="{StaticResource ProductTextBox}" />
                    <!--#endregion-->
                    <!--#region Weigth-->
                    <Grid>
                        <TextBlock Text="Waga" Style="{StaticResource ProfileProperties}"/>
                        <TextBlock Text="g" HorizontalAlignment="Right" Style="{StaticResource ProfileProperties}"/>
                    </Grid>
                    <Label Content="{Binding Weigth}" Style="{StaticResource ProductLabel}"/>
                    <TextBox Text="{Binding Weigth}" Name="EditedWeight" Style="{StaticResource ProductTextBox}"/>
                    <!--#endregion-->
                    <!--#region Price-->
                    <Grid>
                        <TextBlock Text="Cena sprzedaży" Style="{StaticResource ProfileProperties}"/>
                        <TextBlock Text="zł" HorizontalAlignment="Right" Style="{StaticResource ProfileProperties}"/>
                    </Grid>
                    <Label Content="{Binding Price}"  Style="{StaticResource ProductLabel}"/>
                    <TextBox Text="{Binding Price}" Name="EditedPrice" Style="{StaticResource ProductTextBox}" />
                    <!--#endregion-->
                </StackPanel>
                <!--#endregion-->
                <!--#region Buttons-->
                <StackPanel Orientation="Vertical" Grid.Column="2" Margin="10 0 0 0">
                    <Button Name="AddButton" Content="Dodaj" Click="AddButton_Click" 
                            Style="{StaticResource ProducutsButton}">
                        <Button.Triggers>
                            <EventTrigger RoutedEvent="Button.Click">
                                <BeginStoryboard Storyboard="{StaticResource ShowEditStory}"/>
                            </EventTrigger>
                        </Button.Triggers>
                    </Button>
                    
                    <Button Name="EditButton"   Content="Edytuj"  Click="EditButton_Click"
                            Style="{StaticResource ProducutsButton}">
                        <Button.Triggers>
                            <EventTrigger RoutedEvent="Button.Click">
                                <BeginStoryboard Storyboard="{StaticResource ShowEditStory}"/>
                            </EventTrigger>
                        </Button.Triggers>
                    </Button>
                    
                    <Button Name="DeleteButton" Content="Usuń" Click="DeleteButton_Click" 
                            Style="{StaticResource ProducutsButton}"/>
                    
                    <Button Name="SaveButton" Content="Zapisz"  Click="SaveButton_Click" 
                            Style="{StaticResource ProducutsButton}">
                        <Button.Triggers>
                            <EventTrigger RoutedEvent="Button.Click">
                                <BeginStoryboard Storyboard="{StaticResource HideEditStory}"/>
                            </EventTrigger>
                        </Button.Triggers>
                    </Button>
                </StackPanel>
                <!--#endregion-->
            </Grid>
            <!--#region ProductsList-->
            <DataGrid Name="ProductsList" Grid.Column="1"
                      HorizontalAlignment="Left"
                      ItemsSource="{Binding Products}" 
                      AutoGenerateColumns="False" 
                      LoadingRow="NumberRowIteration"
                      CanUserAddRows="False" SelectionMode="Single" 
                      IsReadOnly="True" Style="{StaticResource BasicDataGrid}">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Nazwa" Binding="{Binding Name}"/>
                    <DataGridTextColumn Header="Szerokość" Binding="{Binding Width}"/>
                    <DataGridTextColumn Header="Wysokość" Binding="{Binding Height}"/>
                    <DataGridTextColumn Header="Długość" Binding="{Binding Length}"/>
                    <DataGridTextColumn Header="Waga" Binding="{Binding Weigth}"/>
                    <DataGridTextColumn Header="Cena sprzedaży" Binding="{Binding Price}"/>
                </DataGrid.Columns>
            </DataGrid>
            <!--#endregion-->
        </Grid>
    </Grid>
</UserControl>
