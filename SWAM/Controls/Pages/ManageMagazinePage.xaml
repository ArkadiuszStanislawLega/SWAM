<local:BasicPage x:Class="SWAM.ManageMagazinePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"  
      xmlns:local="clr-namespace:SWAM.Controls.Pages"
      xmlns:basic="clr-namespace:SWAM.Controls.Templates.AdministratorPage"
      xmlns:conv="clr-namespace:SWAM.Converters"
      xmlns:fa="http://schemas.fontawesome.io/icons/"
      xmlns:context="clr-namespace:SWAM.Models.ViewModels.ManageMagazinePage"
      mc:Ignorable="d" 
      HorizontalAlignment="Stretch"
      VerticalAlignment="Stretch"
      Background="{StaticResource BackgroundOfPagesBrash}"
      d:DesignHeight="450"
      d:DesignWidth="800">
    <!--#region Reosurces-->
    <UserControl.Resources>
        <Style x:Key="HeaderConcealment" TargetType="{x:Type GridViewColumnHeader}">
            <Setter Property="Visibility" Value="Collapsed" />
        </Style>

        <!--#region LoadedStory-->
        <Storyboard x:Key="LoadedStory">
            <ThicknessAnimation Storyboard.TargetProperty="Margin"
                                Storyboard.TargetName="MainContent"
                                Duration="0:0:0.8"
                                From="0 0 -250 0"
                                To="0"
                                DecelerationRatio="1"/>
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                             Storyboard.TargetName="MainContent"
                             Duration="0:0:0.8" 
                             From="0" To="1"/>
        </Storyboard>
        <!--#endregion-->
        <!--#region ProducutsButton-->
        <Style x:Key="ProducutsButton" TargetType="Button" BasedOn="{StaticResource NavigationButton}">
            <Setter Property="Width" Value="50"/>
            <Setter Property="Margin" Value="10"/>
        </Style>
        <!--#endregion-->
        <!--#region ProductTextBox-->
        <Style x:Key="ProductTextBox" TargetType="TextBox">
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="HorizontalContentAlignment" Value="Right" />
            <Setter Property="Visibility" Value="{Binding Visibility, ElementName=EditedName}"/>
            <Setter Property="Opacity" Value="{Binding Opacity, ElementName=EditedName}" />
            <Setter Property="FontSize" Value="14"/>
        </Style>
        <!--#endregion-->
        <!--#region ProductLabel-->
        <Style x:Key="ProductLabel" TargetType="Label">
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="Visibility" Value="{Binding Visibility, ElementName=LabelName}"/>
            <Setter Property="Opacity" Value="{Binding Opacity, ElementName=LabelName}" />
        </Style>
        <!--#endregion-->
        <!--#region ShowEditStory-->
        <Storyboard x:Key="ShowEditStory">
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                             Storyboard.TargetName="EditedName"
                             Duration="0:0:0.4" 
                             From="0" To="1"/>
            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="EditedName" 
                                           Storyboard.TargetProperty="(UIElement.Visibility)">
                <DiscreteObjectKeyFrame KeyTime="0" Value="{x:Static Visibility.Visible}"/>
            </ObjectAnimationUsingKeyFrames>

            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="LabelName" 
                                           Storyboard.TargetProperty="(UIElement.Visibility)">
                <DiscreteObjectKeyFrame KeyTime="0:0:0" Value="{x:Static Visibility.Collapsed}"/>
            </ObjectAnimationUsingKeyFrames>
        </Storyboard>
        <!--#endregion-->
        <!--#region HideEditStory-->
        <Storyboard x:Key="HideEditStory">
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                             Storyboard.TargetName="EditedName"
                             Duration="0:0:0.4" 
                             From="1" To="0"/>
            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="EditedName" 
                                           Storyboard.TargetProperty="(UIElement.Visibility)">
                <DiscreteObjectKeyFrame KeyTime="0:0:0.4" Value="{x:Static Visibility.Collapsed}"/>
            </ObjectAnimationUsingKeyFrames>

            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="LabelName" 
                                           Storyboard.TargetProperty="(UIElement.Visibility)">
                <DiscreteObjectKeyFrame KeyTime="0:0:0.4" Value="{x:Static Visibility.Visible}"/>
            </ObjectAnimationUsingKeyFrames>
        </Storyboard>
        <!--#endregion-->
    </UserControl.Resources>
    <!--#endregion-->
    <UserControl.Triggers>
        <EventTrigger RoutedEvent="UserControl.Loaded">
            <BeginStoryboard Storyboard="{StaticResource LoadedStory}"/>
        </EventTrigger>
    </UserControl.Triggers>
    <Grid>
        <!--#region RowsDefinitions-->
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <!--#endregion-->
        <TextBlock Name="Title" 
                   Text="Stany magazynowe" 
                   Margin="10 0 0 0"
                   Style="{StaticResource Title}"
                   HorizontalAlignment="Left"/>
        <Border  Grid.Row="1" BorderBrush="{StaticResource GraphiteBrash}" BorderThickness="1" >
            <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                <Grid Name="MainContent">
                    <!--#region Column definitions-->
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition MinWidth="300" MaxWidth="500"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <!--#endregion-->
                    <Grid Grid.Column="0" Name="ProductProfile" >
                        <!--#region Column definitions-->
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="auto"/>
                        </Grid.ColumnDefinitions>
                        <!--#endregion-->
                        <!--#region Properites-->
                        <StackPanel Grid.Column="0"
                            Margin="10"
                            MinWidth="300">
                            <!--#region Name-->
                            <TextBlock Text="Produkt:"  Style="{StaticResource ProfileProperties}"/>
                            <Label Name="LabelName" Content="{Binding Product.Name}" Visibility="Visible" HorizontalAlignment="Right"/>
                            <TextBox  Name="EditedName" Text="{Binding Name}" 
                              FontSize="14"
                              HorizontalAlignment="Stretch"
                              HorizontalContentAlignment="Right"
                              Visibility="{Binding Visibility,
                                        ElementName=LabelName,
                                        Converter={conv:VisibilityReverseConverter}}"/>
                            <!--#endregion-->
                            <!--#region Nazwa magazynu-->
                            <Grid>
                                <TextBlock Text="Magazyn:" Style="{StaticResource ProfileProperties}"/>
                                <TextBlock Text="" HorizontalAlignment="Right" Style="{StaticResource ProfileProperties}"/>
                            </Grid>
                            <Label Content="{Binding Warehouse.Name}"  Style="{StaticResource ProductLabel}"/>
                            <!--#endregion-->
                            <!--#region WarehouseName-->
                            <Grid>
                                <TextBlock Text="Ilość dostępna:" Style="{StaticResource ProfileProperties}"/>
                                <TextBlock Text="" HorizontalAlignment="Right" Style="{StaticResource ProfileProperties}"/>
                            </Grid>
                            <Label Content="{Binding Available }" Style="{StaticResource ProductLabel}"/>
                            <!--#endregion-->
                            <!--#region Quantity-->
                            <Grid>
                                <TextBlock Text="Ilość całkowita:" Style="{StaticResource ProfileProperties}"/>
                                <TextBlock Text="" HorizontalAlignment="Right" Style="{StaticResource ProfileProperties}"/>
                            </Grid>
                            <Label Content="{Binding Quantity}" Style="{StaticResource ProductLabel}"/>
                            <TextBox Name="EditedQuantity" Text="{Binding Quantity}" Style="{StaticResource ProductTextBox}" />
                            <!--#endregion-->
                            <!--#region Booked-->
                            <Grid>
                                <TextBlock Text="Ilość zarezerwowana:" Style="{StaticResource ProfileProperties}"/>
                                <TextBlock Text="" HorizontalAlignment="Right" Style="{StaticResource ProfileProperties}"/>
                            </Grid>
                            <Label Content="{Binding Booked}" Style="{StaticResource ProductLabel}"/>
                            <!--#endregion-->
                            <!--#region Price-->
                            <Grid>
                                <TextBlock Text="Cena sprzedaży:" Style="{StaticResource ProfileProperties}"/>
                                <TextBlock Text="" HorizontalAlignment="Right" Style="{StaticResource ProfileProperties}"/>
                            </Grid>
                            <Label Content="{Binding Product.Price, Converter={conv:DecimalToIntegerConverter}}"  Style="{StaticResource ProductLabel}"/>
                            <!--#endregion-->
                        </StackPanel>
                        <!--#endregion-->
                        <!--#region Buttons-->
                        <StackPanel Orientation="Vertical" Grid.Column="2" Margin="10">
                            <Button Name="EditButton"   Content="Edytuj"  Click="EditButton_Click"
                            Style="{StaticResource ProducutsButton}">
                                <Button.Triggers>
                                    <EventTrigger RoutedEvent="Button.Click">
                                        <BeginStoryboard Storyboard="{StaticResource ShowEditStory}"/>
                                    </EventTrigger>
                                </Button.Triggers>
                            </Button>
                            <Button Name="SaveButton" Content="Zapisz"  Click="SaveButton_Click" 
                            Style="{StaticResource ProducutsButton}">
                                <Button.Triggers>
                                    <EventTrigger RoutedEvent="Button.Click">
                                        <BeginStoryboard Storyboard="{StaticResource HideEditStory}"/>
                                    </EventTrigger>
                                </Button.Triggers>
                            </Button>
                        </StackPanel>
                        <!--#endregion-->
                    </Grid>
                    <!--#region ProductsList-->
                    <Grid Grid.Column="1" HorizontalAlignment="Right" Margin="0 0 10 0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="auto"/>
                        </Grid.ColumnDefinitions>

                        <Grid Grid.Column="0" Margin="5">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!--#region Warehouse search box-->
                            <StackPanel Grid.Row="0" Orientation="Horizontal" Name="FindUserOrCreate" >
                                <TextBox Tag="Wyszukaj magazyn" 
                             FontSize="14" Width="170" Height="30"
                             HorizontalAlignment="Center"
                             Margin="0"
                             Style="{StaticResource UserLogin}"
                             Name="warehouseFilter"
                             />
                                <Button Width="30" Height="30" Style="{StaticResource NavigationButton}">
                                    <fa:ImageAwesome Icon="BuildingOutline" Foreground="{StaticResource FontsBrash}" Height="20" Width="20"/>
                                </Button>
                            </StackPanel>
                            <!--#endregion-->

                            <!--#region Warehouse list-->
                            <Grid Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Top">
                                <ScrollViewer HorizontalScrollBarVisibility="Hidden">
                                    <ListView MaxHeight="300" Name="warehouseListView" 
                                              Background="{StaticResource MainBarBrash}" 
                                              Foreground="White" BorderThickness="0" 
                                              PreviewMouseLeftButtonUp="WarehouseListViewItem_PreviewMouseLeftButtonUp" 
                                              DataContext="{x:Static context:WarehouseListViewModel.Instance}"
                                              ItemsSource="{Binding Warehouses}">
                                        <ListView.View>
                                            <GridView ColumnHeaderContainerStyle="{StaticResource HeaderConcealment}">
                                                <GridViewColumn Header="Name" Width="180" DisplayMemberBinding="{Binding Name}" />
                                            </GridView>
                                        </ListView.View>
                                    </ListView>
                                </ScrollViewer>
                            </Grid>
                            <!--#endregion-->
                        </Grid>
                        <Grid Grid.Column="1">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto"/>
                            </Grid.ColumnDefinitions>

                            <DataGrid Name="ProductsList"
                                  Grid.Row="0"
                                  Margin="5"
                                  RowHeaderWidth="0"
                                  ItemsSource="{Binding states}" 
                                  AutoGenerateColumns="False" 
                                  CanUserAddRows="False" SelectionMode="Single" 
                                  IsReadOnly="True" Style="{StaticResource BasicDataGrid}"                   
                                  MouseLeftButtonUp="MagazineList_LeftMouseButtonDown">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="ProduktId" Binding="{Binding Id}"/>
                                    <DataGridTextColumn Header="Produkt" Binding="{Binding Product.Name}"/>
                                    <DataGridTextColumn Header="MagazynId" Binding="{Binding WarehouseId}"/>
                                    <DataGridTextColumn Header="Magazyn" Binding="{Binding Warehouse.Name}"/>
                                    <DataGridTextColumn Header="Stan" Binding="{Binding Quantity}"/>
                                    <DataGridTextColumn Header="Dostępne" Binding="{Binding Available}"/>
                                    <DataGridTextColumn Header="Zarezerwowane" Binding="{Binding Booked}"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                    </Grid>
                </Grid>
                <!--#endregion-->
            </ScrollViewer>
        </Border>
    </Grid>
</local:BasicPage>

