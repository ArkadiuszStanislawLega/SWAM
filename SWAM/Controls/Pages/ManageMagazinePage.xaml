<local:BasicPage x:Class="SWAM.ManageMagazinePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"  
      xmlns:local="clr-namespace:SWAM.Controls.Pages"
      xmlns:basic="clr-namespace:SWAM.Controls.Templates.AdministratorPage"
      xmlns:conv="clr-namespace:SWAM.Converters"
      mc:Ignorable="d" 
      HorizontalAlignment="Stretch"
      VerticalAlignment="Stretch"
      Background="{StaticResource BackgroundOfPagesBrash}"
      d:DesignHeight="450"
      d:DesignWidth="800">
    <!--#region Reosurces-->
    <UserControl.Resources>
        <!--#region LoadedStory-->
        <Storyboard x:Key="LoadedStory">
            <ThicknessAnimation Storyboard.TargetProperty="Margin"
                                Storyboard.TargetName="MainContent"
                                Duration="0:0:0.8"
                                From="0 0 -250 0"
                                To="0"
                                DecelerationRatio="1"/>
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                             Storyboard.TargetName="MainContent"
                             Duration="0:0:0.8" 
                             From="0" To="1"/>
        </Storyboard>
        <!--#endregion-->
        <!--#region ProducutsButton-->
        <Style x:Key="ProducutsButton" TargetType="Button" BasedOn="{StaticResource NavigationButton}">
            <Setter Property="Width" Value="50"/>
            <Setter Property="Margin" Value="10"/>
        </Style>
        <!--#endregion-->
        <!--#region ProductTextBox-->
        <Style x:Key="ProductTextBox" TargetType="TextBox">
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="HorizontalContentAlignment" Value="Right" />
            <Setter Property="Visibility" Value="{Binding Visibility, ElementName=EditedName}"/>
            <Setter Property="Opacity" Value="{Binding Opacity, ElementName=EditedName}" />
            <Setter Property="FontSize" Value="14"/>
        </Style>
        <!--#endregion-->
        <!--#region ProductLabel-->
        <Style x:Key="ProductLabel" TargetType="Label">
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="Visibility" Value="{Binding Visibility, ElementName=LabelName}"/>
            <Setter Property="Opacity" Value="{Binding Opacity, ElementName=LabelName}" />
        </Style>
        <!--#endregion-->
        <!--#region ShowEditStory-->
        <Storyboard x:Key="ShowEditStory">
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                             Storyboard.TargetName="EditedName"
                             Duration="0:0:0.4" 
                             From="0" To="1"/>
            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="EditedName" 
                                           Storyboard.TargetProperty="(UIElement.Visibility)">
                <DiscreteObjectKeyFrame KeyTime="0" Value="{x:Static Visibility.Visible}"/>
            </ObjectAnimationUsingKeyFrames>

            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="LabelName" 
                                           Storyboard.TargetProperty="(UIElement.Visibility)">
                <DiscreteObjectKeyFrame KeyTime="0:0:0" Value="{x:Static Visibility.Collapsed}"/>
            </ObjectAnimationUsingKeyFrames>
        </Storyboard>
        <!--#endregion-->
        <!--#region HideEditStory-->
        <Storyboard x:Key="HideEditStory">
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                             Storyboard.TargetName="EditedName"
                             Duration="0:0:0.4" 
                             From="1" To="0"/>
            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="EditedName" 
                                           Storyboard.TargetProperty="(UIElement.Visibility)">
                <DiscreteObjectKeyFrame KeyTime="0:0:0.4" Value="{x:Static Visibility.Collapsed}"/>
            </ObjectAnimationUsingKeyFrames>

            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="LabelName" 
                                           Storyboard.TargetProperty="(UIElement.Visibility)">
                <DiscreteObjectKeyFrame KeyTime="0:0:0.4" Value="{x:Static Visibility.Visible}"/>
            </ObjectAnimationUsingKeyFrames>
        </Storyboard>
        <!--#endregion-->
    </UserControl.Resources>
    <!--#endregion-->
    <UserControl.Triggers>
        <EventTrigger RoutedEvent="UserControl.Loaded">
            <BeginStoryboard Storyboard="{StaticResource LoadedStory}"/>
        </EventTrigger>
    </UserControl.Triggers>
    <Grid>
        <!--#region RowsDefinitions-->
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <!--#endregion-->
        <TextBlock Name="Title" 
                   Text="Stany magazynowe" 
                   Margin="10 0 0 0"
                   Style="{StaticResource Title}"
                   HorizontalAlignment="Left"/>
        <Border  Grid.Row="1" BorderBrush="{StaticResource GraphiteBrash}" BorderThickness="1" >
            <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                <Grid Name="MainContent">
                    <!--#region Column definitions-->
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="auto"/>
                    </Grid.ColumnDefinitions>
                    <!--#endregion-->
                    <Grid Grid.Column="0" Name="ProductProfile" >
                        <!--#region Column definitions-->
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="auto"/>
                        </Grid.ColumnDefinitions>
                        <!--#endregion-->
                        <!--#region Properites-->
                        <StackPanel Grid.Column="0"
                            Margin="10"
                            MinWidth="300">
                            <!--#region Name-->
                            <TextBlock Text="Produkt:"  Style="{StaticResource ProfileProperties}"/>
                            <Label Name="LabelName" Content="{Binding Product.Name}" Visibility="Visible" HorizontalAlignment="Right"/>
                            <TextBox  Name="EditedName" Text="{Binding Name}" 
                              FontSize="14"
                              HorizontalAlignment="Stretch"
                              HorizontalContentAlignment="Right"
                              Visibility="{Binding Visibility,
                                        ElementName=LabelName,
                                        Converter={conv:VisibilityReverseConverter}}"/>
                            <!--#endregion-->
                            <!--#region Nazwa magazynu-->
                            <Grid>
                                <TextBlock Text="Magazyn:" Style="{StaticResource ProfileProperties}"/>
                                <TextBlock Text="" HorizontalAlignment="Right" Style="{StaticResource ProfileProperties}"/>
                            </Grid>
                            <Label Content="{Binding Warehouse.Name}"  Style="{StaticResource ProductLabel}"/>
                            <!--#endregion-->
                            <!--#region WarehouseName-->
                            <Grid>
                                <TextBlock Text="Ilość dostępna:" Style="{StaticResource ProfileProperties}"/>
                                <TextBlock Text="" HorizontalAlignment="Right" Style="{StaticResource ProfileProperties}"/>
                            </Grid>
                            <Label Content="{Binding Available }" Style="{StaticResource ProductLabel}"/>
                            <!--#endregion-->
                            <!--#region Quantity-->
                            <Grid>
                                <TextBlock Text="Ilość całkowita:" Style="{StaticResource ProfileProperties}"/>
                                <TextBlock Text="" HorizontalAlignment="Right" Style="{StaticResource ProfileProperties}"/>
                            </Grid>
                            <Label Content="{Binding Quantity}" Style="{StaticResource ProductLabel}"/>
                            <TextBox Name="EditedQuantity" Text="{Binding Quantity}" Style="{StaticResource ProductTextBox}" />
                            <!--#endregion-->
                            <!--#region Booked-->
                            <Grid>
                                <TextBlock Text="Ilość zarezerwowana:" Style="{StaticResource ProfileProperties}"/>
                                <TextBlock Text="" HorizontalAlignment="Right" Style="{StaticResource ProfileProperties}"/>
                            </Grid>
                            <Label Content="{Binding Booked}" Style="{StaticResource ProductLabel}"/>
                            <!--#endregion-->
                            <!--#region Price-->
                            <Grid>
                                <TextBlock Text="Cena sprzedaży:" Style="{StaticResource ProfileProperties}"/>
                                <TextBlock Text="" HorizontalAlignment="Right" Style="{StaticResource ProfileProperties}"/>
                            </Grid>
                            <Label Content="{Binding Product.Price, Converter={conv:DecimalToIntegerConverter}}"  Style="{StaticResource ProductLabel}"/>
                            <!--#endregion-->
                        </StackPanel>
                        <!--#endregion-->
                        <!--#region Buttons-->
                        <StackPanel Orientation="Vertical" Grid.Column="2" Margin="10">
                            <Button Name="EditButton"   Content="Edytuj"  Click="EditButton_Click"
                            Style="{StaticResource ProducutsButton}">
                                <Button.Triggers>
                                    <EventTrigger RoutedEvent="Button.Click">
                                        <BeginStoryboard Storyboard="{StaticResource ShowEditStory}"/>
                                    </EventTrigger>
                                </Button.Triggers>
                            </Button>
                            <Button Name="SaveButton" Content="Zapisz"  Click="SaveButton_Click" 
                            Style="{StaticResource ProducutsButton}">
                                <Button.Triggers>
                                    <EventTrigger RoutedEvent="Button.Click">
                                        <BeginStoryboard Storyboard="{StaticResource HideEditStory}"/>
                                    </EventTrigger>
                                </Button.Triggers>
                            </Button>
                        </StackPanel>
                        <!--#endregion-->
                    </Grid>
                    <!--#region ProductsList-->
                    <DataGrid Name="ProductsList"
                              Margin="5"
                              Grid.Column="1"
                              HorizontalAlignment="Stretch"
                              ItemsSource="{Binding States}" 
                              AutoGenerateColumns="False" 
                              CanUserAddRows="False" SelectionMode="Single" 
                              IsReadOnly="True" Style="{StaticResource BasicDataGrid}"                   
                              MouseLeftButtonUp="MagazineList_LeftMouseButtonDown">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ProduktId" Binding="{Binding Id}"/>
                            <DataGridTextColumn Header="Produkt" Binding="{Binding Product.Name}"/>
                            <DataGridTextColumn Header="MagazynId" Binding="{Binding WarehouseId}"/>
                            <DataGridTextColumn Header="Magazyn" Binding="{Binding Warehouse.Name}"/>
                            <DataGridTextColumn Header="Dostępne" Binding="{Binding Quantity}"/>
                        </DataGrid.Columns>
                    </DataGrid>
                    <!--#endregion-->
                </Grid>
            </ScrollViewer>
        </Border>
    </Grid>
</local:BasicPage>

