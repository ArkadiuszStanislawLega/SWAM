<UserControl x:Class="SWAM.Controls.Templates.ManageOrdersPage.ManageWarehouseOrdersPage.NewOrder.Warehouses.WarehouseDetailsFormTemplate"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SWAM.Controls.Templates.ManageOrdersPage.ManageWarehouseOrdersPage.NewOrder.Warehouses"
             mc:Ignorable="d" 
             Height="auto"
             Width="auto"
             d:DesignHeight="180" d:DesignWidth="270">

    <StackPanel>
        <!--#region Name-->
        <StackPanel Margin="10">
            <TextBlock Text="Nazwa"
                           Style="{StaticResource ProfileProperties}"/>
            <Border Style="{StaticResource GrayBorder}">
                <TextBlock Name="Name" Width="250" Text="{Binding Name}"/>
            </Border>
        </StackPanel>
        <!--#endregion-->
        <!--#region Dimensions-->
        <StackPanel Orientation="Horizontal">
            <StackPanel Margin="10">
                <TextBlock Text="Wysokość" Style="{StaticResource ProfileProperties}"/>
                <Border Style="{StaticResource GrayBorder}">
                    <TextBlock Name="Height" Width="76" Text="{Binding Height}"/>
                </Border>
            </StackPanel>
            <StackPanel Margin="0 10">
                <TextBlock Text="Szerokość" Style="{StaticResource ProfileProperties}"/>
                <Border Style="{StaticResource GrayBorder}">
                    <TextBlock Name="Width" Width="76" Text="{Binding Width}"/>
                </Border>
            </StackPanel>
            <StackPanel Margin="10">
                <TextBlock Text="Długość" Style="{StaticResource ProfileProperties}"/>
                <Border Style="{StaticResource GrayBorder}">
                    <TextBlock Name="Length" Width="76" Text="{Binding Length}"/>
                </Border>
            </StackPanel>
        </StackPanel>
        <!--#endregion-->
        <!--#region Acceptable weight-->
        <StackPanel Margin="10">
            <TextBlock Text="Maksymalna dopuszczalna waga"
                                   Style="{StaticResource ProfileProperties}"/>
            <Border Style="{StaticResource GrayBorder}">
                <TextBlock Name="AcceptableWeight" Width="250" Text="{Binding AcceptableWeight}"/>
            </Border>
        </StackPanel>
        <!--#endregion-->
    </StackPanel>
</UserControl>
