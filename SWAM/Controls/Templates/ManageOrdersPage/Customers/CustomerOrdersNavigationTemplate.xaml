<UserControl x:Class="SWAM.Controls.Templates.ManageOrdersPage.Customers.CustomerOrdersNavigationTemplate"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SWAM.Controls.Templates.ManageOrdersPage.Customers"
             xmlns:nav="clr-namespace:SWAM.Controls.Templates.MainWindow"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="100">
    <Border Margin="5">
        <StackPanel  
                        Name="NavigationBar">
            <nav:NavigationButtonTemplate Width="100" 
                                              Content="Lista zleceń"
                                              x:Name="SwitchToUsersControlPanel" 
                                              Style="{StaticResource NavigationButton}"/>

            <nav:NavigationButtonTemplate Width="100" 
                                              Margin="0 5 0 0"
                                              Content="Nowe zlecenie" 
                                              x:Name="SwitchToWarehousesControlPanel" 
                                              Style="{StaticResource NavigationButton}"/>
        </StackPanel>
    </Border>
</UserControl>
